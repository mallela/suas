from Tkinter import *
import queue
import blobExtraction
#import manualCropo
def viewAllImages():
	queue.mainProcess()
	#viewAllImages.configure(command=viewAllImages)
def extractBlobs():
	blobExtraction.mainProcess()

windowA = Tk()
frameA = Frame(windowA)

folderAllImages = Button(frameA, text = "All images", command = viewAllImages)
folderAlphanumeralTargets = Button(frameA, text = "Alpha-Numeral Targets")
folderExceptions = Button(frameA, text = "Exception cases (alphanumeral)")
folderIrEmergingEtc = Button(frameA, text = "IR/Emergent")
folderSavedCrops = Button(frameA,text = "I'm full of crop")

blobExtractAuto = Button(frameA, text = "Auto", command= extractBlobs)
blobExtractException = Button(frameA, text = "Exception handling")
blobExtractManual = Button(frameA, text = "Manual")
irEtcManual = Button(frameA, text = "Manual recognition")

'''
folderAllImages.pack(side = LEFT, padx = 10)
folderAlphanumeralTargets.pack(side = LEFT)
folderIrEmergingEtc.pack(side = LEFT, padx = 10)
'''
folderAllImages.grid(row = 0, column= 0)
folderAlphanumeralTargets.grid(row = 0, column= 1)
folderExceptions.grid(row = 0, column = 2)
folderIrEmergingEtc.grid(row = 0, column= 3)
folderSavedCrops.grid(row = 0, column= 4)

blobExtractAuto.grid( row = 1, column=1)
blobExtractException.grid(row = 1, column=2)
blobExtractManual.grid(row = 2, column=2)
irEtcManual.grid(row=1, column=3)


labelFrameA = Label(windowA, text = "SYSTEM 0")

labelFrameA.pack()
frameA.pack()
windowA.mainloop()